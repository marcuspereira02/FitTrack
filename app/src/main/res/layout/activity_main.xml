<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <View
        android:id="@+id/ic_app"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:background="@drawable/ic_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/wdxl_lubrifont"
        android:text="FitTrack"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ic_app"
        app:layout_constraintStart_toEndOf="@id/ic_app"
        app:layout_constraintTop_toTopOf="@id/ic_app" />

    <View
        android:id="@+id/bg_info"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <TextView
        android:id="@+id/tv_metrics_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/bg_info"
        app:layout_constraintStart_toStartOf="@id/bg_info"
        app:layout_constraintTop_toTopOf="@id/bg_info"
        tools:text="Tempo total de atividades" />

    <TextView
        android:id="@+id/tv_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_medium"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bg_info"
        app:layout_constraintStart_toStartOf="@+id/bg_info"
        app:layout_constraintTop_toBottomOf="@id/tv_metrics_label"
        tools:text="3 horas" />

    <RadioGroup
        android:id="@+id/rg_metrics"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_info"
        app:layout_constraintEnd_toEndOf="@id/bg_info"
        app:layout_constraintStart_toStartOf="@id/bg_info">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_total_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:buttonTint="@color/blue" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_total_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/blue" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_completed_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/blue" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_category_activity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/category"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_category_activity_label"
        tools:listitem="@layout/item_category" />

    <TextView
        android:id="@+id/tv_activity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/activities"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_category" />

    <View
        android:id="@+id/view_background_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_activity_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/view_background_activity"
        app:layout_constraintEnd_toEndOf="@id/view_background_activity"
        app:layout_constraintStart_toStartOf="@id/view_background_activity"
        app:layout_constraintTop_toBottomOf="@id/view_background_activity"
        app:layout_constraintTop_toTopOf="@id/view_background_activity"
        tools:listitem="@layout/item_activity" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/blue"
        android:src="@drawable/ic_baseline_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_attention_category_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_info" />

        <TextView
            android:id="@+id/tv_category_empty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/please_new_category"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_category_empty"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:src="@drawable/add_files" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_category_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_filled"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>